<style>
    * {
  box-sizing: border-box;
}

body {
  font-family: Arial, Helvetica, sans-serif;
}

/* Float four columns side by side */
.column {
  float: left;
  width: 25%;
  padding: 0 10px;
}

/* Remove extra left and right margins, due to padding */
.row {margin: 0 -5px;}

/* Clear floats after the columns */
.row:after {
  content: "";
  display: table;
  clear: both;
}
/* Style the counter cards */
.card {
  box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.1);
  padding: 16px;
  text-align: left;
  background-color: #FFFFFF;
}
</style>
@{
    Layout="_LayoutModerator";
}
<br><br><br><br>
<section class="blog-post-area section-margin mt-4">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 sidebar-widgets">
              <div class="widget-wrap">
                <div class="single-sidebar-widget post-category-widget">
                  <h4 class="single-sidebar-widget__title">Thread Rekomendasi</h4>
                  <ul class="cat-list mt-20">
                    <li>
                        <div class="container text-left" style="margin-left:0px;">
                            <div class="row">
                                <div class="col-8 text-left">
                                    <p><b>etika menyalip bus di jalan tol</b></p>
                                    <p></p>
                                    <small class="text-muted">Sains & Technology</small>
                                </div>
                                <div class="col-2">
                                    <img src="https://s.kaskus.id/images/2019/06/01/7580643_201906011024150933.jpg" style="width:70px;height:70px;">
                                </div>
                            </div>
                        </div>
                    </li>
                  </ul>
                </div>
              </div>
            </div>

            <div class="col-lg-8">
                @{
                    var detail = ViewBag.detail;
                    foreach(var i in detail)
                    {
                        <div class="card">
                            <div class="containe">
                                <div class="row">
                                    <div class="col-1">
                                        <img src="https://pngimage.net/wp-content/uploads/2018/06/inc-logo-png-4.png" style="width: 50px;height:50px;border-radius:50%;">
                                    </div>
                                    <div class="col-10">
                                        <medium><b>@i.UserName</b> / <small class="text-muted">@i.CreatedAt.ToString("dd-MM-yyyy H:mm")</small></medium>
                                        <br>
                                        <small class="text-muted">@i.Category</small>
                                    </div>
                                </div>
                            </div>
                            <hr class="mb-4">
                            <h4><b>@i.Title</b></h4>
                            <div class="text-center">
                                <img src="@i.Image" style="width:600px;height:400px;">
                            </div><br>
                            <p>@i.Body</p>
                        </div>
                        <br>
                    }
                }
            </div>
        </div>
    </div>
</section>
